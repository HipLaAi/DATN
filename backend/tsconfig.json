{
  //install library tsyringe
  "compilerOptions": {
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,

    //mind
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": [
    "src",
    "server.ts",
    "index.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}